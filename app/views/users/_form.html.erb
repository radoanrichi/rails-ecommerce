<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% if current_user.admin? %>
    <!-- Admin only sees and can change the role -->
    <div class="field">
      <%= form.label :role %>
      <%= form.select :role, User.roles.keys.map { |r| [r.titleize, r] } %>
    </div>
  <% else %>
    <!-- Non-admin users see and can change other attributes, role field is hidden or disabled -->
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
    <div class="field">
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>
    <div class="field">
      <%= form.label :address %>
      <%= form.text_field :address %>
    </div>
    <div class="field">
      <%= form.label :phone %>
      <%= form.telephone_field :phone %>
    </div>
    <div class="field">
      <%= form.label :role %>
      <%= form.text_field :role, value: user.role, readonly: true %>
    </div>
    <div class="field">
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
    <div class="field">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation %>
    </div>
  <% end %>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
