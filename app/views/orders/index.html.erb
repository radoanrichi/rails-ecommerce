<h1>Your Orders</h1>
<table>
  <thead>
    <tr>
      <th>Order Date</th>
      <th>Total Amount</th>
      <th>Status</th>
      <th>Shipping Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_date %></td>
        <td><%= number_to_currency(order.total_amount) %></td>
        <td><%= order.status.titleize %></td>
        <td><%= order.shipping_status.titleize %></td>
        <td><%= link_to 'View', user_order_path(current_user, order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
