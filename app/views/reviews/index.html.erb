<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User ID</th>
      <th>Rating</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.user_id %></td>
        <td><%= review.rating %></td>
        <td><%= review.comment %></td>
        <td><%= link_to 'Show', [@product, review] %></td>
        <td><%= link_to 'Edit', edit_product_review_path(@product, review) %></td>
        <td><%= link_to 'Destroy', [@product, review], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Review', new_product_review_path(@product) %>
